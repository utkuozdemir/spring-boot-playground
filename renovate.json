{
  "extends": [
    "config:base",
    ":automergeBranch",
    ":automergeMinor",
    ":automergeDigest",
    ":semanticCommitTypeAll(chore)"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "maven"
      ],
      "groupName": "maven dependencies"
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "groupName": "docker images"
    },
    {
      "extends": [
        ":automergeMajor"
      ],
      "matchPaths": [
        ".github/workflows/**"
      ],
      "groupName": "github actions"
    }
  ]
}
